<UserControl x:Class="Presentation.WPF.Views.PlayersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="clr-namespace:Engine.Implementations;assembly=Engine"
             xmlns:c="clr-namespace:Presentation.WPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <UserControl.Resources>
        
        <c:DiseaseToIconConverter x:Key="DiseaseToIconConverter"/>
        
        <ControlTemplate x:Key="LeftButton" TargetType="Button">
            <Grid>
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="Common">
                        <VisualState x:Name="Normal"/>
                        <VisualState x:Name="MouseOver">
                            <Storyboard>
                                <ColorAnimation From="White" To="Yellow" Storyboard.TargetName="Path" Storyboard.TargetProperty="(Stroke).Color"/>
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="Pressed">
                            <Storyboard>
                                <DoubleAnimation From="1" To="0.75" Storyboard.TargetName="Content" Storyboard.TargetProperty="(RenderTransform).ScaleX" Duration="0:00:00.1" AutoReverse="True"/>
                                <DoubleAnimation From="1" To="0.75" Storyboard.TargetName="Content" Storyboard.TargetProperty="(RenderTransform).ScaleY" Duration="0:00:00.1" AutoReverse="True"/>
                            </Storyboard>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
                
                <Border Width="30" Height="15" Background="Transparent">
                    <ContentControl x:Name="Content">
                        <ContentControl.RenderTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </ContentControl.RenderTransform>
                        <ContentControl.Content>
                            <Path x:Name="Path" Width="15" Height="15" Stroke="White" StrokeThickness="3" Stretch="Uniform" UseLayoutRounding="False" StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeLineJoin="Round" Data="F1 M 328.101,80.0001L 80,328.101L 328.101,576.203"/>
                        </ContentControl.Content>
                    </ContentControl>
                </Border>

            </Grid>
        </ControlTemplate>

        <ControlTemplate x:Key="RightButton" TargetType="Button">
            <Grid>
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="Common">
                        <VisualState x:Name="Normal"/>
                        <VisualState x:Name="MouseOver">
                            <Storyboard>
                                <ColorAnimation From="White" To="Yellow" Storyboard.TargetName="Path" Storyboard.TargetProperty="(Stroke).Color"/>
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="Pressed">
                            <Storyboard>
                                <DoubleAnimation From="1" To="0.75" Storyboard.TargetName="Content" Storyboard.TargetProperty="(RenderTransform).ScaleX" Duration="0:00:00.1" AutoReverse="True"/>
                                <DoubleAnimation From="1" To="0.75" Storyboard.TargetName="Content" Storyboard.TargetProperty="(RenderTransform).ScaleY" Duration="0:00:00.1" AutoReverse="True"/>
                            </Storyboard>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>

                <Border Width="30" Height="15" Background="Transparent">
                    <ContentControl x:Name="Content">
                        <ContentControl.RenderTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </ContentControl.RenderTransform>
                        <ContentControl.Content>
                            <Path x:Name="Path" Width="15" Height="15" Stroke="White" StrokeThickness="3" Stretch="Uniform" UseLayoutRounding="False" StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeLineJoin="Round" Data="F1 M 328.101,80.0001L 80,328.101L 328.101,576.203">
                                <Path.LayoutTransform>
                                    <RotateTransform Angle="180"/>
                                </Path.LayoutTransform>
                            </Path>
                        </ContentControl.Content>
                    </ContentControl>
                </Border>

            </Grid>
        </ControlTemplate>

        <ControlTemplate x:Key="ActionButton" TargetType="Button">
            <Grid>
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="Common">
                        <VisualState x:Name="Normal"/>
                        <VisualState x:Name="MouseOver">
                            <Storyboard>
                                <ColorAnimation From="White" To="Yellow" Storyboard.TargetName="Border" Storyboard.TargetProperty="(BorderBrush).Color" Duration="0:00:00"/>
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="Pressed">
                            <Storyboard>
                                <ColorAnimation From="White" To="Yellow" Storyboard.TargetName="Border" Storyboard.TargetProperty="(BorderBrush).Color" Duration="0:00:00"/>
                                <ColorAnimation From="Transparent" To="Gray" Storyboard.TargetName="Border" Storyboard.TargetProperty="(Background).Color" Duration="0:00:00"/>
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="Disabled">
                            <Storyboard>
                                <DoubleAnimation From="1" To="0" Storyboard.TargetName="Border" Storyboard.TargetProperty="Opacity" Duration="0"/>
                            </Storyboard>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>

                <Border x:Name="Border" Opacity="1" Background="Transparent" BorderBrush="White" BorderThickness="2" CornerRadius="3" TextElement.Foreground="White" TextElement.FontSize="14">
                    <ContentPresenter HorizontalAlignment="Center"/>
                </Border>

            </Grid>
        </ControlTemplate>

    </UserControl.Resources>

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Viewbox Height="25">
                <ContentControl Content="{StaticResource man}"/>
            </Viewbox>
            <Viewbox Height="40">
                <ContentControl Content="{StaticResource man}"/>
            </Viewbox>
            <Viewbox Height="25">
                <ContentControl Content="{StaticResource man}"/>
            </Viewbox>
        </StackPanel>
        <Separator Grid.Row="1" HorizontalAlignment="Stretch"/>
        <ListView Grid.Row="2" ItemsSource="{Binding Players}" SelectedItem="{Binding SelectedPlayer}" Width="300" BorderBrush="Transparent" Background="Transparent">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="2" Columns="2"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Margin" Value="5"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Border x:Name="Border" Background="Transparent" BorderThickness="2" CornerRadius="3" TextElement.FontSize="14" TextElement.Foreground="White">
                                    <ContentPresenter Margin="5"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="White"/>        
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <Separator Grid.Row="3" HorizontalAlignment="Stretch"/>
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Viewbox Height="30">
                <ContentControl Content="{StaticResource man}"/>
            </Viewbox>
            <Label Content="{Binding CurrentPlayer}" ContentStringFormat="{}: {0}" Foreground="White" FontSize="16" VerticalAlignment="Center"/>
            <Viewbox Height="25" Margin="15,0,0,0">
                <ContentControl Content="{StaticResource actions}"/>
            </Viewbox>
            <Label Content="{Binding ActionsLeft}" ContentStringFormat="{}: {0}" Foreground="White" FontSize="16" VerticalAlignment="Center"/>
        </StackPanel>
        <TabControl Grid.Row="5" Width="275" Margin="0,5,0,5" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Loaded="TabControl_Loaded">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" Background="Transparent" BorderBrush="White" BorderThickness="1" Width="50" Height="30">
                                    <ContentPresenter x:Name="ContentSite" ContentSource="Header"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabControl.Style>
                <Style TargetType="TabControl">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabControl">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TabPanel Grid.Column="1" IsItemsHost="True" Panel.ZIndex="1"/>
                                    <ContentPresenter Margin="0,5,0,0" Grid.Row="1" ContentSource="SelectedContent"/>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Style>
            <TabItem>
                <TabItem.Header>
                    <Viewbox Height="20">
                        <ContentControl Content="{StaticResource car}" HorizontalAlignment="Center"/>
                    </Viewbox>
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <ListBox x:Name="PossibleDestinations" Margin="5,0,5,0" ItemsSource="{Binding DriveDestinations}" Background="Transparent" BorderBrush="Transparent" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Destination.Name}"/>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock x:Name="Text" Text="{Binding ActionsRequired}"/>
                                        <Viewbox Height="{Binding ElementName=Text, Path=FontSize}" Margin="2,3,0,0">
                                            <ContentControl Content="{StaticResource actions}"/>
                                        </Viewbox>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border Background="Transparent">
                                                <ContentPresenter x:Name="Content" TextElement.Foreground="White" TextElement.FontSize="14"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Content" Property="TextElement.FontSize" Value="20"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                    <Button Grid.Row="1" Margin="5,5,5,0" Template="{StaticResource ActionButton}" Content="Drive" Command="{Binding DriveCommand}" CommandParameter="{Binding ElementName=PossibleDestinations, Path=SelectedItem}"/>
                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <Viewbox Height="20">
                        <ContentControl Content="{StaticResource pill}" HorizontalAlignment="Center" ToolTip="Treat Disease"/>
                    </Viewbox>
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <ListBox x:Name="LocationDiseaseCounters" Margin="5,0,5,0" ItemsSource="{Binding LocationDiseaseCounters}" Background="Transparent" BorderBrush="Transparent" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <Viewbox Height="{Binding ElementName=Text, Path=FontSize}" Margin="0,3,4,0">
                                            <ContentControl Content="{Binding Disease, Converter={StaticResource DiseaseToIconConverter}}"/>
                                        </Viewbox>
                                        <TextBlock Text="{Binding Count}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock x:Name="Text" Text="1"/>
                                        <Viewbox Height="{Binding ElementName=Text, Path=FontSize}" Margin="2,3,0,0">
                                            <ContentControl Content="{StaticResource actions}"/>
                                        </Viewbox>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border Background="Transparent">
                                                <ContentPresenter x:Name="Content" TextElement.Foreground="White" TextElement.FontSize="14"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Content" Property="TextElement.FontSize" Value="20"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                    <Button Grid.Row="1" Margin="5,5,5,0" Template="{StaticResource ActionButton}" Content="Treat Disease" Command="{Binding TreatDiseaseCommand}" CommandParameter="{Binding ElementName=LocationDiseaseCounters, Path=SelectedItem}"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
    
</UserControl>
