<UserControl x:Class="Presentation.WPF.Views.PlayersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="clr-namespace:Engine.Implementations;assembly=Engine"
             xmlns:c="clr-namespace:Presentation.WPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <UserControl.Resources>
        
        <c:DiseaseToIconConverter x:Key="DiseaseToIconConverter"/>
        <c:RoleToPawnConverter x:Key="RoleToPawnConverter"/>

    </UserControl.Resources>

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Viewbox Height="25">
                <ContentControl Content="{StaticResource man}"/>
            </Viewbox>
            <Viewbox Height="40">
                <ContentControl Content="{StaticResource man}"/>
            </Viewbox>
            <Viewbox Height="25">
                <ContentControl Content="{StaticResource man}"/>
            </Viewbox>
        </StackPanel>
        <Separator Grid.Row="1" HorizontalAlignment="Stretch"/>
        <ListView Grid.Row="2" ItemsSource="{Binding PlayerViewModels}" BorderBrush="Transparent" Background="Transparent">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Background="Transparent">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="text" Text="{Binding Name}"/>
                            <TextBlock Grid.Column="1" Text="{Binding TurnOrder, StringFormat={}#{0}}" HorizontalAlignment="Right"/>
                        </Grid>
                        <StackPanel Orientation="Horizontal">
                            <Viewbox Height="{Binding ElementName=text, Path=FontSize}">
                                <ContentControl Content="{StaticResource id}"/>
                            </Viewbox>
                            <TextBlock Text="{Binding Role, StringFormat={} : {0}}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Viewbox Height="{Binding ElementName=text, Path=FontSize}">
                                <ContentControl Content="{StaticResource pin}"/>
                            </Viewbox>
                            <TextBlock Text="{Binding Location, StringFormat={} : {0}}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Viewbox Height="{Binding ElementName=text, Path=FontSize}">
                                <ContentControl Content="{StaticResource pawnWhite}"/>
                            </Viewbox>
                            <TextBlock Text=":" Margin="5,0,5,0"/>
                            <Viewbox Height="{Binding ElementName=text, Path=FontSize}">
                                <ContentControl Content="{Binding Role, Converter={StaticResource RoleToPawnConverter}}"/>
                            </Viewbox>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="4" Columns="1"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Margin" Value="5"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Border x:Name="Border" Background="Transparent" BorderThickness="{StaticResource StandardBorderThickness}" CornerRadius="{StaticResource StandardCornerRadius}" TextElement.FontSize="14" TextElement.Foreground="White">
                                    <ContentPresenter Margin="5"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <Separator Grid.Row="3" HorizontalAlignment="Stretch"/>
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Viewbox Height="30">
                <ContentControl Content="{StaticResource man}"/>
            </Viewbox>
            <Label Content="{Binding CurrentPlayer}" ContentStringFormat="{}: {0}" Foreground="White" FontSize="16" VerticalAlignment="Center"/>
            <Viewbox Height="25" Margin="15,0,0,0">
                <ContentControl Content="{StaticResource actions}"/>
            </Viewbox>
            <Label Content="{Binding CurrentPlayer.ActionCounter.Count}" ContentStringFormat="{}: {0}" Foreground="White" FontSize="16" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
    
</UserControl>
